{
  "name": "cxxpods",
  "description": "CXXPods enables simple CMake dependency management",
  "license": "MIT",
  "version": "0.0.51",
  "repository": {
    "type": "git",
    "url": "https://github.com/cxxpods/cxxpods.git"
  },
  "main": "bin/cxxpods",
  "files": [
    "bin/**",
    "src/**",
    "dist/**"
  ],
  "scripts": {
    "compile": "npx babel src/ --out-dir dist  --source-maps inline ",
    "watch": "npx babel src/ --watch --out-dir dist  --source-maps inline",
    "prepublish": "npm run compile",
    "test": "npm run compile && jest",
    "pkg": "npm run compile && npx pkg --out-dir build package.json",
    "installers": "npm run pkg && ./scripts/make-installers.sh"
  },
  "pkg": {
    "scripts": [
      "dist/**",
      "node_modules/simple-git/**/*.js",
      "bin/cxxpods"
    ],
    "assets": "src/assets/**"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/dist/"
    ]
  },
  "bin": {
    "cxxpods": "./bin/cxxpods",
    "cpods": "./bin/cxxpods"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "chalk": "^2.4.1",
    "handlebars": "^4.0.11",
    "js-yaml": "^3.12.0",
    "lockfile": "^1.0.4",
    "lodash": "^4.17.11",
    "proper-lockfile": "^3.0.2",
    "semver": "^5.5.0",
    "shelljs": "^0.8.2",
    "simple-git": "^3.3.0",
    "source-map-support": "^0.5.6",
    "tmp": "0.0.33",
    "typeguard": "0.0.12",
    "winston": "^3.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.4.3",
    "@types/handlebars": "^4.0.38",
    "@types/jest": "^23.1.4",
    "@types/lockfile": "^1.0.1",
    "@types/lodash": "^4.14.132",
    "@types/node": "^12.0.2",
    "@types/shelljs": "^0.8.5",
    "@types/yargs": "^11.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "jest": "^24.7.1",
    "npx": "^10.2.0",
    "pkg": "^4.3.7",
    "typescript": "^2.9.2"
  }
}
